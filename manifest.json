{
	"manifest_version": 3,
	"name": "Reedy",
	"description": "A Chrome extension to help you read stuff by highlighting text line by line.",
	"version": "1.0",
	"action": {
		"default_icon": "images/icon-16.png",
		"default_popup": "pages/options.html"
	},
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"permissions": [
		"scripting"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"src/content.ts"
			]
		}
	]
}
